{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/typescript"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-param-reassign": "off",
    "no-bitwise": "off",
    "consistent-return": "off",
    "no-dupe-class-members": "off",
    "prefer-destructuring": ["error", {
      "array": false,
      "object": true
    }]
  }
}
